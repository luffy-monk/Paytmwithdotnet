@model PaytmGateway.Models.PaymentRequestViewModel
@{
    ViewBag.Title = "Home Page";
}


@using (Html.BeginForm("MakePaymentRequest", "Home", FormMethod.Post, new { id = "frmPost" }))
{
    <div class="form-horizontal" style="display: flex; width:100%; flex-direction:column; justify-content:center; align-items:center">
        <h4>
            Enter your details and proceed
        </h4>
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Amount, new { @class = "control-label" })
            @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Pay Now</button>
        </div>
    </div>
}